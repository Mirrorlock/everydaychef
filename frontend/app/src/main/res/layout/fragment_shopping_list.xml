<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/shopping_list_fragment_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="cursive"
        android:text="What do we need..."
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/big_text"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/sl_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"

        android:gravity="center"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/shopping_list_fragment_info_text"
        app:layout_constraintTop_toBottomOf="@id/shopping_list_fragment_info_text" />

    <ProgressBar
        android:id="@+id/sl_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_list_items"
        app:layout_constraintEnd_toEndOf="@+id/shopping_list_items"
        app:layout_constraintStart_toStartOf="@+id/shopping_list_items"
        app:layout_constraintTop_toTopOf="@+id/shopping_list_items" />

    <ListView
        android:id="@+id/shopping_list_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sl_dropdown" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"
        android:text="Shopping list: "
        android:textSize="@dimen/medium_text"
        app:layout_constraintBottom_toBottomOf="@+id/sl_dropdown"
        app:layout_constraintEnd_toStartOf="@+id/sl_dropdown"
        app:layout_constraintTop_toTopOf="@+id/sl_dropdown" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shopping_list_add_items"
        android:src="@drawable/ic_add_shopping_cart"
        android:tint="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:foregroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shopping_list_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_delete"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_list_add_items"
        app:layout_constraintEnd_toStartOf="@+id/shopping_list_add_items"
        app:layout_constraintTop_toTopOf="@+id/shopping_list_add_items"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>