<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile">

        <RelativeLayout
            android:id="@+id/create_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@color/white_transparent"
            app:layout_constraintBottom_toTopOf="@+id/btn_create_recipe"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ProgressBar
                android:id="@+id/create_recipe_progressbar"
                style="?android:attr/progressBarStyle"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    <Button
        android:id="@+id/btn_choose_ingredients"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:layout_marginTop="92dp"
        android:background="@color/colorPrimary"
        android:text="Choose ingredients..."
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/new_recipe_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_choose_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_image" />

    <EditText
        android:id="@+id/new_recipe_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Describe how to cook it"
        android:inputType="textMultiLine"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="@+id/new_recipe_name"
        app:layout_constraintStart_toStartOf="@+id/recipe_description_label"
        app:layout_constraintTop_toBottomOf="@+id/recipe_description_label" />

    <TextView
        android:id="@+id/recipe_description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="cursive"
        android:text="Description:"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="@+id/new_recipe_name"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_name" />

    <Button
        android:id="@+id/btn_choose_image"
        android:layout_width="313dp"
        android:layout_height="44dp"
        android:layout_marginTop="76dp"
        android:background="@color/colorPrimary"
        android:text="Choose image..."
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/new_recipe_description"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="@+id/new_recipe_description"
        app:layout_constraintTop_toBottomOf="@+id/new_recipe_description" />

    <ImageView
        android:id="@+id/new_recipe_image_view"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/btn_choose_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_image" />


    <TextView
        android:id="@+id/recipe_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="cursive"
        android:text="Name:"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/medium_text"
        app:layout_constraintStart_toStartOf="@+id/new_recipe_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name your new recipe!"
        android:minWidth="300sp"
        android:textSize="@dimen/medium_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_name_label" />


    <Button
        android:id="@+id/btn_create_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/colorAccent"
        android:elevation="20dp"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Create recipe!"
        android:textColor="@color/white"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/new_recipe_ingredients_text"
        android:layout_width="315dp"
        android:layout_height="65dp"
        android:text="No ingredients added"
        app:layout_constraintStart_toStartOf="@+id/btn_choose_ingredients"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_ingredients" />


</androidx.constraintlayout.widget.ConstraintLayout>