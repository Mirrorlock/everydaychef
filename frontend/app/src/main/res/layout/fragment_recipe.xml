<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_profile"
    >
<!--    android:background="@color/colorPrimaryLight">-->

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/recipe_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recipe_image_height"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_to_shopping_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:elevation="3dp"
            android:tint="@color/white"
            android:src="@drawable/ic_add_shopping_cart"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_above="@id/ingredients_layout"/>


        <LinearLayout
            android:id="@+id/ingredients_layout"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_below="@id/recipe_image_view"
            android:orientation="vertical"
            android:padding="10dp"
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/ingredients_tag"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Ingredients: "
                android:typeface="serif"
                android:fontFamily="cursive"
                android:textSize="@dimen/big_text"
                />

            <ListView
                android:id="@+id/recipe_ingredients_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"/>
        </LinearLayout>

        <RelativeLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:minHeight="200dp"
            android:layout_below="@id/ingredients_layout"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/description_tag"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="How to make: "
                android:typeface="serif"
                android:fontFamily="cursive"
                android:textSize="@dimen/big_text"
                />

            <TextView
                android:id="@+id/recipe_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text"
                android:layout_below="@+id/description_tag" />
        </RelativeLayout>



    </RelativeLayout>
</androidx.core.widget.NestedScrollView>