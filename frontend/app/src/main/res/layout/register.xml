<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_vector_background">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="190dp"
        android:layout_height="132dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cook_icon_launcher" />


    <EditText
        android:id="@+id/et_reg_confirm_password"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="#DDFFFFFF"
        android:drawableStart="@drawable/ic_lock"
        android:drawableLeft="@drawable/ic_lock"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="@dimen/medium_text"
        android:typeface="serif"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reg_password" />

    <EditText
        android:id="@+id/et_reg_username"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="64dp"
        android:background="#DDFFFFFF"
        android:drawableStart="@drawable/ic_menu_person"
        android:drawableLeft="@drawable/ic_menu_person"
        android:hint="Enter username"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="@dimen/medium_text"
        android:typeface="serif"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/et_reg_email"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="#DDFFFFFF"
        android:drawableStart="@drawable/ic_email"
        android:drawableLeft="@drawable/ic_email"
        android:hint="Enter your email"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="@dimen/medium_text"
        android:typeface="serif"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reg_username" />

    <EditText
        android:id="@+id/et_reg_password"
        android:layout_width="260dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        android:background="#DDFFFFFF"
        android:drawableStart="@drawable/ic_lock"
        android:drawableLeft="@drawable/ic_lock"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="@dimen/medium_text"
        android:typeface="serif"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reg_email" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@android:color/holo_red_light"
        android:fadingEdge="horizontal|vertical|none"
        android:onClick="registerOnClick"
        android:text="Register Me!"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/extra_small_text"
        android:textStyle="bold"
        android:typeface="serif"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <fragment
        android:id="@+id/register_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        facebook:navGraph="@navigation/mobile_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>